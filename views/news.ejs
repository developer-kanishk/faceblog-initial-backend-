<!DOCTYPE html>
<html>

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  <style>
    * {
      box-sizing: border-box;
    }

    /* Add a gray background color with some padding */
    body {
      font-family: Arial;
      padding: 20px;
      background: #f1f1f1;
    }

    /* Header/Blog Title */

    /* Create two unequal columns that floats next to each other */
    /* Left column */
    .leftcolumn {
      float: left;
      width: 75%;
    }

    /* Right column */
    .rightcolumn {
      float: left;
      width: 25%;
      padding-left: 20px;
      padding-top: 7px;
    }

    /* Fake image */
    .fakeimg {
      /* background-color: #aaa; */
      width: 100%;
      padding: 20px;
    }

    /* Add a card effect for articles */
    .card {
      background-color: white;
      padding: 40px;
      margin-top: 20px;
      /* border-radius: 50px; */
    }

    .cardright {
      background-color: #9fb8ad;
      padding: 20px;
      margin-top: 20px;
      /* border-radius: 50px; */
    }

    /* Clear floats after the columns */
    .row:after {
      content: "";
      display: table;
      clear: both;
    }

    img {
      max-width: 100%;
      max-height: 100%;
    }

    .mylink {
      text-decoration: none;
      color: black
    }

    a:hover {
      color: red;
    }


    /* Responsive layout - when the screen is less than 800px wide, make the two columns stack on top of each other instead of next to each other */
    @media screen and (max-width: 800px) {

      .leftcolumn,
      .rightcolumn {
        width: 100%;
        padding: 0;
      }
    }
    .menu
    {
      padding-top: 30px;
      padding-left: 15px;
      font-size: 40px;
    }
    .iWantUrCum:hover{
      background-color: red;
    }
  </style>
</head>

<body>
  <header>
    <%- include('./partials/header'); %>
  </header>
  <div class="menu row">
    <select name="news" id="news">
      <option value="Indian">Indian</option>
      <option value="World">World</option>
    </select>
    <button style="margin-top: 10px; font-size: 20px; " class="iWantUrCum" id="selectButton" type="submit"> Get the news </button>
  </div>
  <% articles.forEach(function(article) { %>
    <div class="row">
     <div class="leftcolumn">
        <div class="card">
          <h2>
            <%=article.title%>
          </h2>
          <!-- <h5><%=article.publishedAt%></h5>  -->
          <div class="fakeimg">
            <img src=<%=article.urlToImage%> alt="">
          </div>
        </div>
      </div>
      <div class="rightcolumn">
        <div class="cardright">
          <div style="text-align: center; font-size: 40px;"><a href=<%=article.url%> class="mylink">Read more</a></div>
        </div>
      </div>
    </div>
    <% }); %>

      <%- include('./partials/footer'); %>

<script>
  let myButton = document.getElementById('selectButton');
    myButton.addEventListener('click',()=>{
    let choice = 'http://localhost/news/'+news.value;
    window.location.href=choice;
});
</script>

</body>
</html>